/* 公共样式 */

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
    background-color: transparent;
}

.button-hover {
    color: rgba(255, 255, 255, 0);
    background-color: rgba(255, 255, 255, 0);
}

button::after {
    border: none;
}

.hover-class {
    background-color: #f2f2f2;
}

.one-ellipsis{
    /* overflow: hidden|visible|scroll|auto|inherit; */
    overflow: hidden;
    /* white-space: pre| pre-line| pre-wrap|nowrap */
    white-space: nowrap;
    /* text-overflow: ellipsis|clip|string */
    text-overflow: ellipsis;
}

.four-ellipsis{
    display: -webkit-box;
    /* box-orient: horizontal|vertical|inline-axis|block-axis|inherit; */
    -webkit-box-orient: vertical;
    -webkit-line-clamp:4;
    overflow: hidden;
    text-overflow: ellipsis;
}

#shareBtn {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    padding: 0;
    margin: 0;
}

