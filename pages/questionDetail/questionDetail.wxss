/* 咨询窗口 */

.advisoryView {
	width: 100%;
    height: 100vh;
    background: rgba(40, 40, 40, 0.7);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10000;
}

.problem {
    width: 750rpx;
    height: 750rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 64rpx 64rpx 0px 0px;
    position: absolute;
    bottom: 0;
    left: 0;
}

.txtPrompt {
    width: 670rpx;
    height: 156rpx;
    text-align: center;
    line-height: 156rpx;
    font-size: 40rpx;
    margin: 0 auto;
    border-bottom: 2rpx solid #e7e7e7;
}

.inputView {
    width: 670rpx;
    height: 492rpx;
    margin: 0 auto;
    box-sizing: border-box;
}

.problemSubmit {
	width: 100%;
    height: 100rpx;
    border: 2rpx solid #EAEAEA;
	line-height: 100rpx;
	text-align: center;
	background-color: #FF639E;
	font-size: 40rpx;
	color: #fff;
